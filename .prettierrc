{
    "trailingComma": "none",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "printWidth": 80,
    "arrowParens": "always",
    "bracketSpacing": true,
    "overrides": [
      {
        "files": "*.component.html",
        "options": {
          "parser": "angular"
        }
      },
      {
        "files": "*.html",
        "options": {
          "parser": "html"
        }
      }
    ],
    "endOfLine": "auto",
    "htmlWhitespaceSensitivity": "ignore"
  }
  